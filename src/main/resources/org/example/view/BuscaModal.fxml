<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" prefWidth="500" prefHeight="400"
      style="-fx-background-color: white; -fx-border-color: #2563eb; -fx-border-width: 2; -fx-background-radius: 10; -fx-border-radius: 10;"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.app.util.BuscaModalController">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <children>
        <Label fx:id="lblTitulo" text="PESQUISAR"
               style="-fx-font-weight: bold; -fx-text-fill: #1e293b; -fx-font-size: 16px;"/>

        <TextField fx:id="txtFiltro" onKeyReleased="#filtrar" prefHeight="40"
                   promptText="Digite para filtrar..."
                   style="-fx-background-color: #f1f5f9; -fx-border-color: #cbd5e1; -fx-background-radius: 5;"/>

        <TableView fx:id="tblResultados" VBox.vgrow="ALWAYS"
                   onMouseClicked="#verificarCliqueDuplo"
                   style="-fx-background-color: transparent;">
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="CANCELAR" onAction="#fechar"
                    style="-fx-background-color: #f1f5f9; -fx-text-fill: #64748b; -fx-font-weight: bold; -fx-cursor: hand;"/>
            <Button text="SELECIONAR" onAction="#confirmar"
                    style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </HBox>
    </children>
</VBox>