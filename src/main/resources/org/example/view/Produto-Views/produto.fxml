<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.app.controller.Produto.ProdutoController"
            style="-fx-background-color: #f8fafc;">

    <!-- HEADER -->
    <top>
        <VBox spacing="12" style="-fx-background-color: white; -fx-padding: 20;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <children>
                        <VBox spacing="4">
                            <Label text="Gestão de Produtos"
                                   style="-fx-text-fill: #1e293b; -fx-font-weight: bold;">
                                <font>
                                    <Font size="22"/>
                                </font>
                            </Label>
                            <Label text="Visualize, adicione ou edite os itens do seu estoque"
                                   style="-fx-text-fill: #64748b; -fx-font-size: 12px;"/>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="+ Novo Produto"
                                onAction="#abrirNovo"
                                prefHeight="40"
                                style="-fx-background-color: #2563eb;
                                       -fx-text-fill: white;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 8;
                                       -fx-padding: 0 20;
                                       -fx-cursor: hand;"/>
                    </children>
                </HBox>

                <Separator/>

                <!-- AÇÕES -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <TextField fx:id="txtPesquisar"
                                   prefWidth="300"
                                   promptText="Pesquisar por nome ou ID..."
                                   style="-fx-background-radius: 5; -fx-padding: 8;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Editar"
                                onAction="#abrirEdicao"
                                style="-fx-background-color: #f1f5f9;
                                       -fx-text-fill: #475569;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 6;
                                       -fx-padding: 8 16;
                                       -fx-cursor: hand;"/>
                        <Button text="Inativar"
                                onAction="#inativar"
                                style="-fx-background-color: #fee2e2;
                                       -fx-text-fill: #dc2626;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 6;
                                       -fx-padding: 8 16;
                                       -fx-cursor: hand;"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <!-- TABELAS -->
    <center>
        <VBox spacing="20" style="-fx-padding: 0 20 20 20;">
            <children>
                <!-- TABELA ATIVOS -->
                <TableView fx:id="tabelaProdutos"
                           VBox.vgrow="ALWAYS"
                           style="-fx-background-color: white;
                                  -fx-background-radius: 10;
                                  -fx-border-color: #e2e8f0;
                                  -fx-border-radius: 10;
                                  -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 14, 0, 0, 4);">

                    <columns>
                        <TableColumn fx:id="colId"
                                     text="ID"
                                     prefWidth="70"
                                     style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colNome"
                                     text="Nome do Produto"
                                     prefWidth="300"/>
                        <TableColumn fx:id="colPreco"
                                     text="Preço Unitário"
                                     prefWidth="120"
                                     style="-fx-alignment: CENTER-RIGHT;"/>
                        <TableColumn fx:id="colEstoque"
                                     text="Estoque"
                                     prefWidth="100"
                                     style="-fx-alignment: CENTER;"/>
                    </columns>

                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

                <!-- CARD INATIVOS -->
                <VBox spacing="12"
                      VBox.vgrow="ALWAYS"
                      style="-fx-background-color: white;
                             -fx-background-radius: 10;
                             -fx-border-color: #e2e8f0;
                             -fx-border-radius: 10;
                             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 14, 0, 0, 4);
                             -fx-padding: 16;">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <Label text="Produtos Inativos"
                                   style="-fx-text-fill: #7c2d12; -fx-font-weight: bold;">
                                <font>
                                    <Font size="18"/>
                                </font>
                            </Label>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="Reativar Selecionados"
                                    onAction="#reativar"
                                    style="-fx-background-color: #dcfce7;
                                           -fx-text-fill: #166534;
                                           -fx-font-weight: bold;
                                           -fx-background-radius: 8;
                                           -fx-padding: 8 16;
                                           -fx-cursor: hand;"/>
                        </HBox>

                        <TableView fx:id="tabelaInativos"
                                   VBox.vgrow="ALWAYS"
                                   style="-fx-background-color: transparent;
                                          -fx-table-cell-border-color: transparent;
                                          -fx-selection-bar: #fde68a;
                                          -fx-selection-bar-non-focused: #fef3c7;">

                            <columns>
                                <TableColumn fx:id="colInativoId"
                                             text="ID"
                                             prefWidth="70"
                                             style="-fx-alignment: CENTER;"/>
                                <TableColumn fx:id="colInativoNome"
                                             text="Nome do Produto"
                                             prefWidth="300"/>
                                <TableColumn fx:id="colInativoPreco"
                                             text="Preço Unitário"
                                             prefWidth="120"
                                             style="-fx-alignment: CENTER-RIGHT;"/>
                                <TableColumn fx:id="colInativoEstoque"
                                             text="Estoque"
                                             prefWidth="100"
                                             style="-fx-alignment: CENTER;"/>
                            </columns>

                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>

</BorderPane>
