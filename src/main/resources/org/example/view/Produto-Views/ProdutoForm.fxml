<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.app.controller.Produto.ProdutoFormController"
            prefWidth="420" prefHeight="320"
            style="-fx-background-color: #f8fafc;">

    <children>
        <VBox spacing="16" layoutX="20" layoutY="20" prefWidth="380"
              style="-fx-background-color: white;
                     -fx-background-radius: 12;
                     -fx-border-color: #e2e8f0;
                     -fx-border-radius: 12;
                     -fx-padding: 20;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 12, 0, 0, 4);">

            <children>
                <!-- Título -->
                <Label text="Cadastro de Produto"
                       style="-fx-text-fill: #1e293b; -fx-font-weight: bold;">
                    <font>
                        <Font size="20"/>
                    </font>
                </Label>

                <!-- Campos -->
                <TextField fx:id="txtNome"
                           promptText="Nome do produto"
                           style="-fx-background-radius: 8; -fx-padding: 8;"/>
                <TextField fx:id="txtPreco"
                           promptText="Preço"
                           style="-fx-background-radius: 8; -fx-padding: 8;"/>
                <TextField fx:id="txtEstoque"
                           promptText="Estoque"
                           style="-fx-background-radius: 8; -fx-padding: 8;"/>

                <!-- Mensagem de erro -->
                <Label fx:id="lblMensagem"
                       style="-fx-text-fill: #dc2626; -fx-font-size: 12px;"/>

                <!-- Botões -->
                <HBox spacing="12" alignment="CENTER_RIGHT">
                    <children>
                        <Button text="Cancelar"
                                onAction="#cancelar"
                                style="-fx-background-color: #f1f5f9;
                                       -fx-text-fill: #475569;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 8;
                                       -fx-padding: 8 16;
                                       -fx-cursor: hand;"/>
                        <Button text="Salvar"
                                onAction="#salvar"
                                style="-fx-background-color: #2563eb;
                                       -fx-text-fill: white;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 8;
                                       -fx-padding: 8 20;
                                       -fx-cursor: hand;"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
