<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.app.controller.UsuarioController" style="-fx-background-color: #f4f4f4;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Gestão de Usuários" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <GridPane hgap="10" vgap="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="Nome Completo:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtNome" promptText="Ex: João Silva" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300"/>

        <Label text="Login/Usuário:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtLogin" promptText="joao.silva" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Senha:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <Button text="Salvar Novo" onAction="#salvar" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Limpar" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        </HBox>
    </GridPane>

    <TableView fx:id="tblUsuarios" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNome" text="Nome" prefWidth="250"/>
            <TableColumn fx:id="colLogin" text="Usuário" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>