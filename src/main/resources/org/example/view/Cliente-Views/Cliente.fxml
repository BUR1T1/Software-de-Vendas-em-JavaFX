<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17"
            fx:controller="org.example.app.controller.Cliente.ClienteController"
            style="-fx-background-color: #f1f5f9;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 4);">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <VBox.margin>
                <Insets bottom="15"/>
            </VBox.margin>

            <Label text="GESTÃƒO DE CLIENTES" textFill="#1e293b">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS" />

            <Button text="+ NOVO CLIENTE" onAction="#novoCadastro"
                    style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 8 15;"/>
            <Button text="EDITAR" onAction="#editar"
                    style="-fx-background-color: #f8fafc; -fx-text-fill: #475569; -fx-border-color: #cbd5e1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 8 15;"/>
            <Button text="INATIVAR" onAction="#inativarCliente"
                    style="-fx-background-color: #fee2e2; -fx-text-fill: #b91c1c; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 8 15;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="15">
            <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 15; -fx-border-color: #e2e8f0; -fx-border-radius: 15; -fx-border-width: 1;">
                <children>
                    <TableView fx:id="tabelaClientes" VBox.vgrow="ALWAYS"
                               style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 10;">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="60" style="-fx-alignment: CENTER; -fx-font-size: 13px;"/>
                            <TableColumn fx:id="colNome" text="NOME COMPLETO" prefWidth="250" style="-fx-font-weight: bold;"/>
                            <TableColumn fx:id="colCpf" text="DOCUMENTO (CPF)" prefWidth="150" />
                            <TableColumn fx:id="colTelefone" text="CONTATO" prefWidth="150" />
                        </columns>
                    </TableView>
                </children>
            </VBox>

            <VBox spacing="10" prefHeight="200" style="-fx-background-color: #f8fafc; -fx-background-radius: 15; -fx-border-color: #e2e8f0; -fx-border-radius: 15; -fx-padding: 15;">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="CLIENTES INATIVOS" textFill="#64748b" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button text="REATIVAR SELECIONADOS" onAction="#reativar"
                                style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 11px;"/>
                    </HBox>
                    <TableView fx:id="tabelaInativos" VBox.vgrow="ALWAYS"
                               style="-fx-background-radius: 10; -fx-background-color: white;">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>

                        <columns>
                            <TableColumn text="ID" prefWidth="60">
                                <cellValueFactory>
                                    <PropertyValueFactory property="id"/>
                                </cellValueFactory>
                            </TableColumn>

                            <TableColumn text="NOME COMPLETO" prefWidth="250">
                                <cellValueFactory>
                                    <PropertyValueFactory property="nome"/>
                                </cellValueFactory>
                            </TableColumn>

                            <TableColumn text="CPF" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="cpf"/>
                                </cellValueFactory>
                            </TableColumn>

                            <TableColumn text="TELEFONE" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="telefone"/>
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                    </TableView>

                </children>
            </VBox>
        </VBox>
    </center>

    <padding>
        <Insets top="15" right="20" bottom="15" left="20"/>
    </padding>

</BorderPane>