<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" style="-fx-background-color: #f8fafc;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.app.controller.Venda.VendaHistoricoController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <children>
        <HBox alignment="CENTER_LEFT" spacing="15">
            <children>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Histórico de Vendas" textFill="#1e293b">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="Consulte e gerencie os registros de vendas da loja." textFill="#64748b">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <HBox spacing="10">
                    <Button onAction="#editarCliente" text="✎ Alterar Cliente"
                            style="-fx-background-color: #ffffff; -fx-text-fill: #2563eb; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 10 20;" />
                    <Button onAction="#editarVendedor" text="✎ Alterar Vendedor"
                            style="-fx-background-color: #ffffff; -fx-text-fill: #0891b2; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 10 20;" />
                    <Button onAction="#cancelarVenda" text="✖ Cancelar Venda"
                            style="-fx-background-color: #fee2e2; -fx-text-fill: #dc2626; -fx-font-weight: bold; -fx-border-color: #fca5a5; -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand; -fx-padding: 10 20;" />
                </HBox>
            </children>
        </HBox>

        <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 20, 0, 0, 10);">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <TableView fx:id="tblHistorico" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-selection-bar: #f1f5f9; -fx-selection-bar-non-focused: #f1f5f9;">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
                        <TableColumn fx:id="colData" prefWidth="180.0" text="Data e Hora" />
                        <TableColumn fx:id="colCliente" prefWidth="250.0" text="Cliente" />
                        <TableColumn fx:id="colVendedor" prefWidth="200.0" text="Vendedor" />
                        <TableColumn fx:id="colTotal" prefWidth="150.0" text="Total (R$)" />
                        <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</VBox>
