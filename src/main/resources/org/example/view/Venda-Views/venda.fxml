<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.app.controller.Venda.VendaController"
            style="-fx-background-color: #f1f5f9;">

    <!-- ===================== TOPO ===================== -->
    <top>
        <HBox alignment="CENTER_LEFT"
              prefHeight="70"
              style="-fx-background-color: white;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 12, 0, 0, 2);">

            <padding>
                <Insets left="30" right="30"/>
            </padding>

            <VBox spacing="2">
                <Label text="MOVIMENTAÇÃO DE VENDA"
                       style="-fx-font-weight: bold; -fx-font-size: 17px;"
                       textFill="#1e293b"/>
                <Label text="Registro de saída de mercadoria"
                       style="-fx-font-size: 12px;"
                       textFill="#64748b"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="lblDataAtual"
                   style="-fx-font-size: 12px;"
                   textFill="#64748b"/>
        </HBox>
    </top>

    <!-- ===================== CENTRO ===================== -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="25" bottom="20" left="25"/>
            </padding>

            <!-- CLIENTE / VENDEDOR -->
            <HBox spacing="15">

                <!-- CLIENTE -->
                <VBox spacing="8"
                      HBox.hgrow="ALWAYS"
                      style="-fx-background-color: white;
                             -fx-padding: 18;
                             -fx-background-radius: 12;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.03), 8, 0, 0, 3);">

                    <Button text="CLIENTE (F2)"
                            onAction="#abrirBuscaCliente"
                            style="-fx-background-color: transparent;
                                   -fx-text-fill: #2563eb;
                                   -fx-font-weight: bold;
                                   -fx-font-size: 11px;
                                   -fx-padding: 0;"/>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="txtBuscaRapidaCliente"
                                   promptText="Digite o nome e pressione ENTER"
                                   onAction="#pesquisarClienteEnter"
                                   HBox.hgrow="ALWAYS"
                                   prefHeight="38"/>

                        <Label fx:id="lblClienteSelecionado"
                               text="Nenhum selecionado"
                               style="-fx-font-weight: bold;"
                               textFill="#64748b"/>
                    </HBox>
                </VBox>

                <!-- VENDEDOR -->
                <VBox spacing="8"
                      HBox.hgrow="ALWAYS"
                      style="-fx-background-color: white;
                             -fx-padding: 18;
                             -fx-background-radius: 12;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.03), 8, 0, 0, 3);">

                    <Button text="VENDEDOR (F3)"
                            onAction="#abrirBuscaVendedor"
                            style="-fx-background-color: transparent;
                                   -fx-text-fill: #2563eb;
                                   -fx-font-weight: bold;
                                   -fx-font-size: 11px;
                                   -fx-padding: 0;"/>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="txtBuscaRapidaVendedor"
                                   promptText="Digite o nome e pressione ENTER"
                                   onAction="#pesquisarVendedorEnter"
                                   HBox.hgrow="ALWAYS"
                                   prefHeight="38"/>

                        <Label fx:id="lblVendedorSelecionado"
                               text="Não selecionado"
                               style="-fx-font-weight: bold;"
                               textFill="#64748b"/>
                    </HBox>
                </VBox>

            </HBox>

            <!-- BUSCA PRODUTO -->
            <VBox spacing="10"
                  style="-fx-background-color: #2563eb;
                         -fx-padding: 22;
                         -fx-background-radius: 16;">

                <!-- Linha superior -->
                <HBox alignment="CENTER_LEFT" spacing="10">

                    <Button text="SELECIONAR PRODUTO (F4)"
                            onAction="#abrirBuscaProduto"
                            style="-fx-background-color: transparent;
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;
                                   -fx-font-size: 12px;
                                   -fx-padding: 0;
                                   -fx-cursor: hand;"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Button text="⋯"
                            onAction="#abrirBuscaProduto"
                            prefWidth="35"
                            prefHeight="30"
                            style="-fx-background-color: rgba(255,255,255,0.2);
                                   -fx-text-fill: white;
                                   -fx-font-size: 18px;
                                   -fx-background-radius: 8;
                                   -fx-cursor: hand;"/>
                </HBox>

                <!-- Linha de busca e quantidade -->
                <HBox spacing="15" alignment="BOTTOM_LEFT">

                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Busca rápida"
                               textFill="white"
                               style="-fx-font-size: 11px;"/>
                        <TextField fx:id="txtBuscaProduto"
                                   promptText="Digite nome ou código e pressione ENTER"
                                   onAction="#pesquisarProdutoEnter"
                                   prefHeight="45"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Quantidade"
                               textFill="white"
                               style="-fx-font-size: 11px;"/>
                        <TextField fx:id="txtQuantidade"
                                   text="1"
                                   alignment="CENTER"
                                   prefWidth="90"
                                   prefHeight="45"
                                   style="-fx-font-weight: bold;"/>
                    </VBox>

                    <Button text="ADICIONAR"
                            onAction="#adicionarItem"
                            prefWidth="130"
                            prefHeight="45"
                            style="-fx-background-color: #1e293b;
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 8;"/>
                </HBox>

                <!-- TABELA -->
                <TableView fx:id="tblItens"
                           VBox.vgrow="ALWAYS"
                           style="-fx-background-radius: 10;">

                    <columns>
                        <TableColumn fx:id="colProduto"
                                     text="DESCRIÇÃO"
                                     prefWidth="350"/>
                        <TableColumn fx:id="colQtd"
                                     text="QTD"
                                     prefWidth="80"
                                     style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colPreco"
                                     text="UNIT."
                                     prefWidth="120"
                                     style="-fx-alignment: CENTER-RIGHT;"/>
                        <TableColumn fx:id="colTotal"
                                     text="TOTAL"
                                     prefWidth="130"
                                     style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold;"/>
                    </columns>

                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- ===================== RODAPÉ ===================== -->
    <bottom>
        <VBox spacing="15"
              style="-fx-background-color: #1e293b;
                     -fx-padding: 25 40;">

            <HBox spacing="25" alignment="CENTER_LEFT">

                <!-- PAGAMENTO -->
                <VBox spacing="5">
                    <Label text="FORMA DE PAGAMENTO"
                           textFill="#94a3b8"
                           style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                    <ComboBox fx:id="cbFormaPagamento"
                              onAction="#alterarFormaPagamento"
                              prefWidth="200"/>
                </VBox>

                <!-- PARCELAS -->
                <VBox spacing="5">
                    <Label text="PARCELAS"
                           textFill="#94a3b8"
                           style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                    <Spinner fx:id="spParcelas"
                             editable="true"
                             disable="true"
                             prefWidth="100"/>
                </VBox>

                <!-- VALOR PARCELA -->
                <VBox spacing="5">
                    <Label text="VALOR DA PARCELA"
                           textFill="#94a3b8"
                           style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                    <Label fx:id="lblValorParcela"
                           text="R$ 0,00"
                           textFill="#facc15"
                           style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- TOTAL -->
                <VBox alignment="CENTER_RIGHT" spacing="3">
                    <Label text="TOTAL DA VENDA"
                           textFill="#94a3b8"
                           style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblValorTotal"
                           text="R$ 0,00"
                           textFill="#4ade80"
                           style="-fx-font-size: 28px;
                                  -fx-font-weight: bold;"/>
                </VBox>

                <!-- BOTÃO FINALIZAR -->
                <Button text="FINALIZAR VENDA"
                        onAction="#finalizarVenda"
                        prefHeight="50"
                        prefWidth="220"
                        style="-fx-background-color: #22c55e;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-font-size: 13px;
                               -fx-background-radius: 10;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
