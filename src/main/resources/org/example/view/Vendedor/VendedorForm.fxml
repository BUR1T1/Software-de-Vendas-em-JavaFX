<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="0.0" prefWidth="450.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #e2e8f0; -fx-border-width: 1;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.app.controller.Vendedor.VendedorFormController">

    <HBox alignment="CENTER_LEFT" prefHeight="70.0" style="-fx-background-color: #2563eb; -fx-background-radius: 15 15 0 0;">
        <padding><Insets left="25.0" right="25.0" /></padding>
        <children>
            <Label fx:id="lblTitulo" text="CADASTRO DE VENDEDOR" textFill="WHITE" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
        </children>
    </HBox>

    <VBox spacing="15.0" style="-fx-padding: 25;">
        <children>
            <VBox spacing="5.0">
                <Label text="NOME COMPLETO" textFill="#64748b" style="-fx-font-weight: bold; -fx-font-size: 11px;" />
                <TextField fx:id="txtNome" prefHeight="40.0" promptText="Digite o nome do colaborador"
                           style="-fx-background-color: #f8fafc; -fx-border-color: #cbd5e1; -fx-border-radius: 8; -fx-background-radius: 8;" />
            </VBox>

            <VBox spacing="5.0">
                <Label text="CPF" textFill="#64748b" style="-fx-font-weight: bold; -fx-font-size: 11px;" />
                <TextField fx:id="txtCpf" prefHeight="40.0" promptText="Somente números (11 dígitos)"
                           style="-fx-background-color: #f8fafc; -fx-border-color: #cbd5e1; -fx-border-radius: 8; -fx-background-radius: 8;" />
            </VBox>

            <VBox spacing="5.0">
                <Label text="COMISSÃO (%)" textFill="#64748b" style="-fx-font-weight: bold; -fx-font-size: 11px;" />
                <TextField fx:id="txtComissao" prefHeight="40.0" promptText="Ex: 5.0"
                           style="-fx-background-color: #f8fafc; -fx-border-color: #cbd5e1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-weight: bold; -fx-text-fill: #2563eb;" />
            </VBox>

            <Separator prefWidth="200.0" style="-fx-padding: 10 0;" />

            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                <children>
                    <Button onAction="#cancelar" prefHeight="40.0" prefWidth="100.0" text="CANCELAR"
                            style="-fx-background-color: #f1f5f9; -fx-text-fill: #64748b; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" />

                    <Button onAction="#salvar" prefHeight="40.0" prefWidth="140.0" text="SALVAR DADOS"
                            style="-fx-background-color: #22c55e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" />
                </children>
            </HBox>
        </children>
    </VBox>
</VBox>