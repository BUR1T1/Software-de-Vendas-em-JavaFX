<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.app.controller.Vendedor.VendedorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Gestão de Vendedores" style="-fx-text-fill: #1e293b;">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Visualize e gerencie sua equipe de vendas" style="-fx-text-fill: #64748b;" />
                    </children>
                </VBox>
                <Button onAction="#abrirNovo" prefHeight="40.0" prefWidth="180.0"
                        style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"
                        text="+ NOVO VENDEDOR" />
            </children>
        </HBox>

        <VBox VBox.vgrow="ALWAYS" spacing="15" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 15, 0, 0, 5);">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <HBox spacing="10">
                    <Button onAction="#abrirEdicao" text="Editar Selecionado" style="-fx-background-color: #f1f5f9; -fx-text-fill: #475569; -fx-font-weight: bold; -fx-cursor: hand;" />
                    <Button onAction="#excluir" text="Excluir" style="-fx-background-color: #fee2e2; -fx-text-fill: #dc2626; -fx-font-weight: bold; -fx-cursor: hand;" />
                </HBox>

                <TableView fx:id="tabelaVendedores" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
                        <TableColumn fx:id="colNome" prefWidth="400.0" text="Nome do Colaborador" />
                        <TableColumn fx:id="colComissao" prefWidth="150.0" text="Comissão (%)" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</VBox>