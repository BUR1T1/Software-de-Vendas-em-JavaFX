<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<VBox spacing="24"
      style="-fx-background-color: #f8fafc;"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.app.controller.Vendedor.VendedorController">

    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <!-- HEADER -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="4" HBox.hgrow="ALWAYS">
            <Label text="Gestão de Vendedores"
                   style="-fx-text-fill: #0f172a; -fx-font-weight: bold;">
                <font>
                    <Font size="26"/>
                </font>
            </Label>
            <Label text="Visualize, edite ou inative colaboradores da equipe"
                   style="-fx-text-fill: #64748b;"/>
        </VBox>

        <Button text="+ Novo Vendedor"
                onAction="#abrirNovo"
                prefHeight="42"
                style="-fx-background-color: #2563eb;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 10;
                       -fx-padding: 0 22;
                       -fx-cursor: hand;"/>
    </HBox>

    <!-- CARD PRINCIPAL -->
    <VBox spacing="16"
          VBox.vgrow="ALWAYS"
          style="-fx-background-color: white;
                 -fx-background-radius: 14;
                 -fx-border-color: #e2e8f0;
                 -fx-border-radius: 14;
                 -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.06), 18, 0, 0, 6);">

        <padding>
            <Insets top="16" right="16" bottom="16" left="16"/>
        </padding>

        <!-- AÇÕES -->
        <HBox spacing="10">
            <Button text="Editar"
                    onAction="#abrirEdicao"
                    style="-fx-background-color: #f1f5f9;
                           -fx-text-fill: #334155;
                           -fx-font-weight: bold;
                           -fx-background-radius: 8;
                           -fx-padding: 8 16;
                           -fx-cursor: hand;"/>

            <Button text="Inativar"
                    onAction="#inativarVendedor"
                    style="-fx-background-color: #fee2e2;
                           -fx-text-fill: #dc2626;
                           -fx-font-weight: bold;
                           -fx-background-radius: 8;
                           -fx-padding: 8 16;
                           -fx-cursor: hand;"/>
        </HBox>

        <!-- TABELA ATIVOS -->
        <TableView fx:id="tabelaVendedores"
                   VBox.vgrow="ALWAYS"
                   style="-fx-background-color: transparent;
                          -fx-table-cell-border-color: transparent;
                          -fx-selection-bar: #dbeafe;
                          -fx-selection-bar-non-focused: #e5e7eb;">

            <columns>
                <TableColumn fx:id="colId"
                             text="ID"
                             prefWidth="70"
                             style="-fx-alignment: CENTER;"/>

                <TableColumn fx:id="colNome"
                             text="Nome"
                             prefWidth="300"/>

                <TableColumn fx:id="colCpf"
                             text="CPF"
                             prefWidth="200"/>

                <TableColumn fx:id="colComissao"
                             text="Comissão (%)"
                             prefWidth="150"
                             style="-fx-alignment: CENTER-RIGHT;"/>
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <!-- CARD INATIVOS -->
        <VBox spacing="16"
              VBox.vgrow="ALWAYS"
              style="-fx-background-color: white;
                     -fx-background-radius: 14;
                     -fx-border-color: #e2e8f0;
                     -fx-border-radius: 14;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 14, 0, 0, 4);">

            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>

            <!-- HEADER INATIVOS -->
            <HBox alignment="CENTER_LEFT" spacing="12">
                <Label text="Vendedores Inativos"
                       style="-fx-text-fill: #7c2d12;
                              -fx-font-weight: bold;">
                    <font>
                        <Font size="18"/>
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="Reativar Selecionados"
                        onAction="#reativar"
                        style="-fx-background-color: #dcfce7;
                               -fx-text-fill: #166534;
                               -fx-font-weight: bold;
                               -fx-background-radius: 8;
                               -fx-padding: 8 16;
                               -fx-cursor: hand;"/>
            </HBox>

            <!-- TABELA INATIVOS -->
            <TableView fx:id="tabelaInativos"
                       VBox.vgrow="ALWAYS"
                       style="-fx-background-color: transparent;
                  -fx-table-cell-border-color: transparent;
                  -fx-selection-bar: #fde68a;
                  -fx-selection-bar-non-focused: #fef3c7;">

                <columns>
                    <TableColumn fx:id="colIdInativo"
                                 text="ID"
                                 prefWidth="70"
                                 style="-fx-alignment: CENTER;"/>

                    <TableColumn fx:id="colNomeInativo"
                                 text="Nome"
                                 prefWidth="300"/>

                    <TableColumn fx:id="colCpfInativo"
                                 text="CPF"
                                 prefWidth="200"/>

                    <TableColumn fx:id="colComissaoInativo"
                                 text="Comissão (%)"
                                 prefWidth="150"
                                 style="-fx-alignment: CENTER-RIGHT;"/>
                </columns>

                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </VBox>
</VBox>
