<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.app.controller.Venda.VendaController"
            style="-fx-background-color: #f1f5f9;">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">
            <padding><Insets left="25.0" right="25.0" /></padding>
            <children>
                <VBox alignment="CENTER_LEFT">
                    <Label text="MOVIMENTAÇÃO DE VENDA" textFill="#1e293b" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                    <Label text="Registro de saída de mercadoria" textFill="#64748b" style="-fx-font-size: 11px;" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Label text="22/01/2026" textFill="#64748b" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="20">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <children>

                <HBox spacing="15">
                    <children>
                        <VBox spacing="8" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.03), 10, 0, 0, 4);">
                            <Button onAction="#abrirBuscaCliente" text="CLIENTE (F2):"
                                    style="-fx-background-color: transparent; -fx-text-fill: #2563eb; -fx-font-weight: bold; -fx-font-size: 10px; -fx-cursor: hand; -fx-padding: 0;"/>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <TextField fx:id="txtBuscaRapidaCliente" onAction="#pesquisarClienteEnter"
                                           HBox.hgrow="ALWAYS" prefHeight="40.0" promptText="Nome e ENTER"
                                           style="-fx-background-color: #f8fafc; -fx-border-color: #cbd5e1; -fx-background-radius: 8;" />
                                <Label fx:id="lblClienteSelecionado" text="Nenhum selecionado" textFill="#64748b" style="-fx-font-weight: bold;"/>
                            </HBox>
                        </VBox>

                        <VBox spacing="8" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.03), 10, 0, 0, 4);">
                            <Button onAction="#abrirBuscaVendedor" text="VENDEDOR (F3):"
                                    style="-fx-background-color: transparent; -fx-text-fill: #2563eb; -fx-font-weight: bold; -fx-font-size: 10px; -fx-cursor: hand; -fx-padding: 0;"/>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <TextField fx:id="txtBuscaRapidaVendedor" onAction="#pesquisarVendedorEnter"
                                           HBox.hgrow="ALWAYS" prefHeight="40.0" promptText="Nome e ENTER"
                                           style="-fx-background-color: #f8fafc; -fx-border-color: #cbd5e1; -fx-background-radius: 8;" />
                                <Label fx:id="lblVendedorSelecionado" text="Não selecionado" textFill="#64748b" style="-fx-font-weight: bold;"/>
                            </HBox>
                        </VBox>
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #2563eb; -fx-padding: 20; -fx-background-radius: 15;">
                    <children>
                        <VBox HBox.hgrow="ALWAYS" spacing="5">
                            <Label text="BUSCAR PRODUTO" textFill="WHITE" style="-fx-font-weight: bold; -fx-font-size: 10px;" />
                            <TextField fx:id="txtBuscaProduto" onAction="#pesquisarProdutoEnter"
                                       prefHeight="45.0" promptText="Digite nome/ID e dê ENTER..."
                                       style="-fx-background-color: white; -fx-background-radius: 8;" />
                        </VBox>
                        <VBox spacing="5">
                            <Label text="QUANTIDADE" textFill="WHITE" style="-fx-font-weight: bold; -fx-font-size: 10px;" />
                            <TextField fx:id="txtQuantidade" prefHeight="45.0" prefWidth="80.0" text="1" alignment="CENTER"
                                       style="-fx-background-color: white; -fx-background-radius: 8; -fx-font-weight: bold;" />
                        </VBox>
                        <Button onAction="#adicionarItem" text="ADICIONAR" prefHeight="45.0" prefWidth="120.0"
                                style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;">
                            <HBox.margin><Insets top="18"/></HBox.margin>
                        </Button>
                    </children>
                </HBox>

                <TableView fx:id="tblItens" VBox.vgrow="ALWAYS" style="-fx-background-radius: 10;">
                    <columns>
                        <TableColumn fx:id="colProduto" text="DESCRIÇÃO" prefWidth="300"/>
                        <TableColumn fx:id="colQtd" text="QTD" prefWidth="80" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colPreco" text="UNIT." prefWidth="100" style="-fx-alignment: CENTER-RIGHT;"/>
                        <TableColumn fx:id="colTotal" text="TOTAL" prefWidth="120" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold; -fx-text-fill: #2563eb;"/>
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" spacing="40.0" style="-fx-background-color: #1e293b; -fx-padding: 0 40;">
            <children>
                <VBox alignment="CENTER_RIGHT">
                    <Label text="TOTAL DA VENDA" textFill="#94a3b8" style="-fx-font-weight: bold; -fx-font-size: 12px;" />
                    <Label fx:id="lblValorTotal" text="R$ 0,00" textFill="#4ade80" style="-fx-font-size: 36px; -fx-font-weight: bold;" />
                </VBox>
                <Button onAction="#finalizarVenda" prefHeight="60.0" prefWidth="240.0" text="FINALIZAR VENDA"
                        style="-fx-background-color: #22c55e; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" />
            </children>
        </HBox>
    </bottom>
</BorderPane>